<% if @book.favorited_by? (current_user) %>
    <%= link_to destroy_favorite_path(book), method: :delete, remote: true do %>
      <span>❤︎</span><%= book.favorites.count %>
    <% end %>
    <% else %>
    <%= link_to create_favorite_path(book), method: :post, remote: true do %>
      <span>♡︎</span><%= book.favorites.count %>
    <% end %>
<% end %>